<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stylable attributes for Theme -->
    <declare-styleable name="Theme">
        <attr name="singleChoiceFormInputStyle" format="reference" />
        <attr name="multipleChoiceFormInputStyle" format="reference" />
        <attr name="multipleChoiceFullScreenFormInputStyle" format="reference" />
        <attr name="dateFormInputStyle" format="reference" />
        <attr name="timeFormInputStyle" format="reference" />
        <attr name="textFormInputStyle" format="reference" />
        <attr name="floatNumberFormInputStyle" format="reference" />
        <attr name="decimalNumberFormInputStyle" format="reference" />
        <attr name="sumDecimalNumberFormInputStyle" format="reference" />
        <attr name="multipleTextFormInputStyle" format="reference" />
        <attr name="memoFormInputStyle" format="reference" />
        <attr name="switchFormInputStyle" format="reference" />
        <attr name="zoneFormInputStyle" format="reference" />
        <attr name="singleChoiceRadioFormInputStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SupportRequiredView">
        <attr name="required" format="boolean" />
    </declare-styleable>

    <attr name="entries" format="string" />
    <attr name="hint" format="string" />

    <!-- Stylable attributes for SingleChoiceFormInput -->
    <declare-styleable name="SingleChoiceFormInput">
        <attr name="entries" />
    </declare-styleable>

    <!-- Stylable attributes for MultipleChoiceFormInput -->
    <declare-styleable name="MultipleChoiceFormInput">
        <attr name="entries" />
    </declare-styleable>

    <!-- Stylable attributes for MultipleChoiceFullScreenFormInput -->
    <declare-styleable name="MultipleChoiceFullScreenFormInput">
        <attr name="entries" />
        <attr name="hint" />
    </declare-styleable>

    <!-- Stylable attributes for SingleChoiceRadioFormInput-->
    <declare-styleable name="SingleChoiceRadioFormInput">
        <attr name="config_entries" />
        <attr name="hint" />
        <attr name="required" />
    </declare-styleable>

    <!-- Stylable attributes for SingleChoiceConfigFormInput-->
    <declare-styleable name="SingleChoiceConfigFormInput">
        <attr name="entries" />
    </declare-styleable>
</resources>