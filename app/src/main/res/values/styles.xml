<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="singleChoiceFormInputStyle">@style/FieldInput.SingleChoice</item>
        <item name="multipleChoiceFormInputStyle">@style/FieldInput.MultipleChoice</item>
        <item name="dateFormInputStyle">@style/FieldInput.Date</item>
        <item name="timeFormInputStyle">@style/FieldInput.Time</item>
        <item name="textFormInputStyle">@style/FieldInput.Text</item>
        <item name="floatNumberFormInputStyle">@style/FieldInput.FloatNumber</item>
        <item name="decimalNumberFormInputStyle">@style/FieldInput.DecimalNumber</item>
        <item name="multipleTextFormInputStyle">@style/FieldInput.MultipleText</item>
        <item name="memoFormInputStyle">@style/FieldInput.Memo</item>
        <item name="switchFormInputStyle">@style/FieldInput.Switch</item>
    </style>

    <style name="FieldSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="FieldLabel">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="FieldInput.Text" parent="android:Widget.Holo.Light.EditText">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="FieldInput.MultipleText" parent="FieldInput.Text"></style>

    <style name="FieldInput.FloatNumber" parent="FieldInput.Text">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="FieldInput.DecimalNumber" parent="FieldInput.Text">
        <item name="android:inputType">number|numberSigned</item>
    </style>

    <style name="FieldInput.Memo" parent="FieldInput.Text">
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine|textLongMessage</item>
        <item name="android:scrollbars">none</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="FieldInput.SemiSpinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="FieldInput.Date" parent="FieldInput.SemiSpinner"></style>

    <style name="FieldInput.Time" parent="FieldInput.SemiSpinner"></style>

    <style name="FieldInput.MultipleChoice" parent="FieldInput.SemiSpinner"></style>

    <style name="FieldInput.SingleChoice" parent="FieldInput.SemiSpinner"></style>

    <style name="FieldInput.Switch" parent="android:Widget.Holo.Light.CompoundButton.CheckBox"></style>

</resources>
