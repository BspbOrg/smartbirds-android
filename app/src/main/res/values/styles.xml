<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/zone_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:alertDialogTheme">@style/SBDialogTheme</item>

        <item name="singleChoiceFormInputStyle">@style/FieldInput.SingleChoice</item>
        <item name="multipleChoiceFormInputStyle">@style/FieldInput.MultipleChoice</item>
        <item name="dateFormInputStyle">@style/FieldInput.Date</item>
        <item name="timeFormInputStyle">@style/FieldInput.Time</item>
        <item name="textFormInputStyle">@style/FieldInput.Text</item>
        <item name="floatNumberFormInputStyle">@style/FieldInput.FloatNumber</item>
        <item name="positiveFloatNumberFormInputStyle">@style/FieldInput.FloatNumber.Positive</item>
        <item name="decimalNumberFormInputStyle">@style/FieldInput.DecimalNumber</item>
        <item name="sumDecimalNumberFormInputStyle">@style/FieldInput.DecimalNumber.Sum</item>
        <item name="positiveDecimalNumberFormInputStyle">@style/FieldInput.DecimalNumber.Positive
        </item>
        <item name="multipleTextFormInputStyle">@style/FieldInput.MultipleText</item>
        <item name="memoFormInputStyle">@style/FieldInput.Memo</item>
        <item name="switchFormInputStyle">@style/FieldInput.Switch</item>
        <item name="zoneFormInputStyle">@style/FieldInput.SingleChoice</item>
    </style>

    <style name="GroupSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="FieldSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="FieldSeparator.Ciconia" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:actionMenuTextAppearance</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="FieldLabel">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="FieldInput.Text" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="FieldInput.MultipleText" parent="FieldInput.Text" />

    <style name="FieldInput.FloatNumber" parent="FieldInput.Text">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="FieldInput.FloatNumber.Positive" parent="FieldInput.Text">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="FieldInput.DecimalNumber" parent="FieldInput.Text">
        <item name="android:inputType">number|numberSigned</item>
    </style>

    <style name="FieldInput.DecimalNumber.Positive" parent="FieldInput.Text">
        <item name="android:inputType">number</item>
    </style>

    <style name="FieldInput.DecimalNumber.Sum" parent="FieldInput.Text">
        <item name="android:imeOptions">
            actionUnspecified|flagNavigateNext|flagNoFullscreen|flagNoExtractUi
        </item>
        <item name="android:imeActionLabel">@string/sum_decimal_number_form_input_plus</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789+</item>
    </style>

    <style name="FieldInput.Memo" parent="FieldInput.Text">
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine|textLongMessage</item>
        <item name="android:scrollbars">none</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="FieldInput.SemiSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="FieldInput.Date" parent="FieldInput.SemiSpinner" />

    <style name="FieldInput.Time" parent="FieldInput.SemiSpinner" />

    <style name="FieldInput.MultipleChoice" parent="FieldInput.SemiSpinner" />

    <style name="FieldInput.SingleChoice" parent="FieldInput.SemiSpinner" />

    <style name="FieldInput.Switch" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout" />

    <style name="SBDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextWarning">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">14sp</item>

    </style>

</resources>
