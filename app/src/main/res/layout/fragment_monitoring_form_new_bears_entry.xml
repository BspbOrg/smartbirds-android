<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_horizontal_spacing"
        android:paddingTop="@dimen/form_vertical_spacing"
        android:paddingRight="@dimen/form_horizontal_spacing"
        android:paddingBottom="@dimen/form_vertical_spacing">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/moderator_review_fragment"
                android:name="org.bspb.smartbirds.pro.ui.fragment.ModeratorReviewFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:layout="@layout/fragment_moderator_review" />


            <org.bspb.smartbirds.pro.ui.views.SwitchFormInput
                android:id="@+id/form_bears_confidential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:tag="@string/tag_confidential"
                android:text="@string/monitoring_private" />

        </LinearLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                android:id="@+id/form_bears_species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_name"
                android:tag="@string/tag_species_scientific_name"
                app:entriesType="species_mammals"
                app:readonly="true"
                app:required="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                android:id="@+id/form_bears_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_age"
                android:tag="@string/tag_age"
                app:entriesType="bears_age" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                android:id="@+id/form_bears_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_gender"
                android:tag="@string/tag_sex"
                app:entriesType="bears_gender" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SumDecimalNumberFormInput
                android:id="@+id/form_bears_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_count"
                android:tag="@string/tag_count"
                app:required="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput
                android:id="@+id/form_bears_excrements_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_excrement_content"
                android:tag="@string/tag_excrement_content"
                app:entriesType="bears_excrement_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                android:id="@+id/form_bears_excrement_consistence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_excrement_consistence"
                android:tag="@string/tag_excrement_consistence"
                app:entriesType="bears_excrement_consistence" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                android:id="@+id/form_bears_marking_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_marking_height"
                android:tag="@string/tag_marking_height" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                android:id="@+id/form_bears_den"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_den"
                android:tag="@string/tag_den"
                app:entriesType="bears_den" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput
                android:id="@+id/form_bears_habitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_habitat"
                android:tag="@string/tag_habitat"
                app:entriesType="bears_habitat" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput
                android:id="@+id/form_bears_findings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_findings"
                android:tag="@string/tag_findings"
                app:entriesType="bears_findings" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput
                android:id="@+id/form_bears_threats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_threats"
                android:tag="@string/tag_threats_other"
                app:entriesType="bears_danger_observation" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/FieldSeparator" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.bspb.smartbirds.pro.ui.views.MultipleTextFormInput
                android:id="@+id/form_bears_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monitoring_bears_notes"
                android:tag="@string/tag_remarks_type" />
        </com.google.android.material.textfield.TextInputLayout>

        <View style="@style/GroupSeparator" />

        <fragment
            android:id="@+id/pictures_fragment"
            android:name="org.bspb.smartbirds.pro.ui.fragment.NewEntryPicturesFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
