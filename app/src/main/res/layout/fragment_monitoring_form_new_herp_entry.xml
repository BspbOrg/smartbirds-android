<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.MonitoringCommonFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Вид"
                    android:tag="Вид"
                    app:entries="form_herp_name" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Пол"
                    android:tag="Пол"
                    app:entries="form_herp_gender" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Възраст"
                    android:tag="Възраст"
                    app:entries="form_herp_age" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Местообитание"
                    android:tag="Местообитание"
                    app:entries="form_herp_habitat" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Заплахи констатации"
                    android:tag="Заплахи констатации"
                    app:entries="form_herp_danger_observation" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="Брой"
                    android:tag="Брой" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Маркировка"
                    android:tag="Маркировка" />

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Разстояние от оста"
                    android:tag="Разстояние от оста" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="Маса (g)"
                    android:tag="Маса (g)" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="SCL/L (mm)"
                    android:tag="SCL/L (mm)" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="MPL/Lcd/C (mm)"
                    android:tag="MPL/Lcd/C (mm)" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="MCW/A (mm)"
                    android:tag="MCW/A (mm)" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="H /Lcap/Pl (mm)"
                    android:tag="H /Lcap/Pl (mm)" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Т на субстрата"
                    android:tag="Т на субстрата" />

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Т на в-ха"
                    android:tag="Т на в-ха" />

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Т на клоака"
                    android:tag="Т на клоака" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="Sq_ventr"
                    android:tag="Sq_ventr" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="Sq_caud"
                    android:tag="Sq_caud" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="Sq_dors"
                    android:tag="Sq_dors" />
            </TableRow>

            <TableRow>


            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.MultipleTextFormInput
                    android:layout_span="3"
                    android:hint="Бележки"
                    android:tag="Бележки" />
            </TableRow>

        </TableLayout>

        <View style="@style/FieldSeparator" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

    </LinearLayout>
</ScrollView>