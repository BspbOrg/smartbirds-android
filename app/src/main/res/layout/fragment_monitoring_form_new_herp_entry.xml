<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.MonitoringCommonFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="@string/monitoring_herp_name"
                    android:tag="@string/tag_species_scientific_name"
                    app:entries="form_herp_name"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="@string/monitoring_herp_gender"
                    android:tag="@string/tag_sex"
                    app:entries="form_herp_gender" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="@string/monitoring_herp_age"
                    android:tag="@string/tag_age"
                    app:entries="form_herp_age" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_herp_habitat"
                    android:hint="@string/monitoring_herp_habitat"
                    android:tag="@string/tag_habitat"
                    app:entries="form_herp_habitat" />

                <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput_
                    android:hint="@string/monitoring_herp_danger_observation"
                    android:tag="@string/tag_threats_other"
                    app:entries="form_herp_danger_observation" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:id="@+id/form_herp_count"
                    android:hint="@string/monitoring_herp_count"
                    android:tag="@string/tag_count"
                    android:text="1"
                    app:required="true"
                    tools:ignore="HardcodedText" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="@string/monitoring_herp_marking"
                    android:tag="@string/tag_marking" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_axis_distance"
                    android:tag="@string/tag_distance_from_axis" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="@string/monitoring_herp_weight"
                    android:tag="@string/tag_weight_g" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="@string/monitoring_herp_scl"
                    android:tag="@string/tag_scl" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="@string/monitoring_herp_mpl"
                    android:tag="@string/tag_mpl" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="@string/monitoring_herp_mcw"
                    android:tag="@string/tag_mcw" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="@string/monitoring_herp_h"
                    android:tag="@string/tag_lcap" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_t_substrate"
                    android:tag="@string/tag_t_substrate" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_t_vha"
                    android:tag="@string/tag_t_air" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_t_kloaka"
                    android:tag="@string/tag_t_cloaca" />
            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_sq_ventr"
                    android:tag="@string/tag_sq_ventr" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_sq_caud"
                    android:tag="@string/tag_sq_caud" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:hint="@string/monitoring_herp_sq_dors"
                    android:tag="@string/tag_sq_dors" />
            </TableRow>

            <TableRow>


            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.MultipleTextFormInput
                    android:layout_span="3"
                    android:hint="@string/monitoring_herp_notes"
                    android:tag="@string/tag_notes" />
            </TableRow>

        </TableLayout>

        <View style="@style/FieldSeparator" />

        <include layout="@layout/partial_pictures" />

    </LinearLayout>
</ScrollView>