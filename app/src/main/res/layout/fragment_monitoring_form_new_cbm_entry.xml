<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.MonitoringCommonFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_name"
                    android:layout_span="7"
                    android:hint="@string/monitoring_cbm_name"
                    android:tag="@string/tag_observed_bird"
                    app:entries="species_birds"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.SwitchFormInput
                    android:id="@+id/form_cbm_confidential"
                    android:layout_span="3"
                    android:tag="@string/tag_confidential"
                    android:text="@string/monitoring_birds_private" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_distance"
                    android:layout_span="5"
                    android:hint="@string/monitoring_cbm_distance"
                    android:tag="@string/tag_distance"
                    app:entries="form_cbm_distance"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.DecimalNumberFormInput
                    android:layout_span="5"
                    android:hint="@string/monitoring_cbm_count"
                    android:tag="@string/tag_count_subject"
                    app:required="true" />


            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_primary_habitat"
                    android:layout_span="5"
                    android:hint="@string/monitoring_cbm_primary_habitat"
                    android:tag="@string/tag_primary_habitat"
                    app:entries="form_cbm_habitat"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_secondary_habitat"
                    android:layout_span="5"
                    android:hint="@string/monitoring_cbm_secondary_habitat"
                    android:tag="@string/tag_secondary_habitat"
                    app:entries="form_cbm_habitat" />

            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_span="3"
                    android:orientation="vertical">

                    <org.bspb.smartbirds.pro.ui.views.ZoneFormInput_
                        android:id="@+id/form_cbm_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/monitoring_cbm_zone"
                        android:tag="@string/tag_zone"
                        app:required="true" />

                    <TextView
                        android:id="@+id/error_cbm_too_far"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4sp"
                        android:layout_marginRight="4sp"
                        android:text="@string/error_cbm_zone_too_far"
                        android:textAppearance="?errorTextAppearance"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_visit_number"
                    android:layout_span="3"
                    android:hint="@string/monitoring_cbm_visit_number"
                    android:tag="@string/tag_visit_number"
                    app:entries="form_cbm_visit_number"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:id="@+id/form_cbm_sector"
                    android:layout_span="4"
                    android:hint="@string/monitoring_cbm_sector"
                    android:tag="@string/tag_transect_number"
                    app:entries="form_cbm_sector"
                    app:required="true" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput_
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="10"
                    android:hint="@string/monitoring_common_threats"
                    android:tag="@string/tag_threats"
                    app:entries="form_main_threats" />
            </TableRow>


        </TableLayout>

        <View style="@style/FieldSeparator" />

        <fragment
            android:id="@+id/pictures_fragment"
            android:name="org.bspb.smartbirds.pro.ui.fragment.NewEntryPicturesFragment_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>