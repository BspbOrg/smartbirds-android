<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="beginning"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.NewBirdsEntryFormFragment">

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_substrate"
            android:tag="Субстрат"
            android:hint="Субстрат" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_location"
            android:tag="Дърво"
            android:hint="Дърво" />

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Височина_на_дървото"
            android:hint="Височина на дървото" />

    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_location"
            android:tag="Местоположение_на_дървото"
            android:hint="Местоположение_на_дървото" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_height"
            android:tag="Височина_на_гнездото"
            android:hint="Височина_на_гнездото" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_position"
            android:tag="Местоположение_на_гнездото"
            android:hint="Местоположение_на_гнездото" />
    </TableRow>

    <TableRow>

        <CheckBox android:text="Мътене"
            android:tag="Мътене"/>

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Брой_яйца"
            android:hint="Брой яйца" />

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Брой_пухови_малки"
            android:hint="Брой пухови малки" />

    </TableRow>

    <TableRow>

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Брой_оперени_малки_в_гнездото"
            android:hint="Брой оперени малки в гнездото" />

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Брой_излетели_малки"
            android:hint="Брой излетели малки" />

        <CheckBox android:text="Охрана на гнездото" android:tag="Охрана_на_гнездото" />
    </TableRow>

    <TableRow android:gravity="bottom">

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_age_individual"
            android:tag="Възраст_на_женската"
            android:hint="Възраст на женската" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_age_individual"
            android:tag="Възраст_на_мъжката"
            android:hint="Възраст на мъжката" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
            style="@style/FieldInput.SingleChoice"
            android:entries="@array/form_birds_nest_success"
            android:tag="Гнездови_успех"
            android:hint="Гнездови успех" />

    </TableRow>

    <TableRow>

        <EditText
            style="@style/FieldInput.Memo"
            android:layout_span="3"
            android:tag="Земеползване_в_радиус_от_300м"
            android:hint="Земеползване в радиус от 300м"
            android:lines="1" />

    </TableRow>
</TableLayout>