<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_start_birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_screen_btn_start" />

        <Button
            android:id="@+id/btn_start_cbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало МОВП" />

        <Button
            android:id="@+id/btn_start_ciconia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало Бял щъркел" />

        <Button
            android:id="@+id/btn_start_herp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало Herp" />


        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_screen_btn_upload" />
    </GridLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>