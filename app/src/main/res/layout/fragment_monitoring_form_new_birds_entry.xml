<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="beginning"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.NewBirdsEntryFormFragment">

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:id="@+id/field_name"
            android:layout_span="3"
            android:hint="Вид научно име"
            android:tag="Вид_научно_име"
            app:entries="form_birds_name" />

        <org.bspb.smartbirds.pro.ui.views.SwitchFormInput
            android:tag="Поверително"
            android:text="Поверително" />

    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Единица на броя"
            android:tag="Единица_на_броя"
            app:entries="form_birds_count_units" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Тип на броя"
            android:tag="Тип_на_броя"
            app:entries="form_birds_count_type" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Тип гнездене"
            android:tag="Тип_Гнездене"
            app:entries="form_birds_nesting" />
    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="Брой"
            android:tag="Брой" />

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="Мин."
            android:tag="Мин." />

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="Макс."
            android:tag="Макс." />

    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Пол"
            android:tag="Пол"
            app:entries="form_birds_sex" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Възраст"
            android:tag="Възраст"
            app:entries="form_birds_age" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="Маркировка"
            android:tag="Маркировка"
            app:entries="form_birds_marking" />


    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:layout_span="2"
            android:hint="Статус на вида"
            android:tag="Статус_на_вида"
            app:entries="form_birds_status" />

        <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput_
            android:layout_span="2"
            android:hint="Поведение"
            android:tag="Поведение"
            app:entries="form_birds_behaviour" />
    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:layout_span="2"
            android:hint="Мъртъв индивид (причини)"
            android:tag="Мъртъв_индивид_причини"
            app:entries="form_birds_death" />
    </TableRow>
</TableLayout>