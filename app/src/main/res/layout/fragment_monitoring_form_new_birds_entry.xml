<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="beginning"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.NewBirdsEntryFormFragment">

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:id="@+id/field_name"
            android:layout_span="3"
            android:hint="@string/monitoring_birds_name"
            android:tag="Вид_научно_име"
            app:entries="form_birds_name"
            app:required="true" />

        <org.bspb.smartbirds.pro.ui.views.SwitchFormInput
            android:tag="Поверително"
            android:text="@string/monitoring_birds_private" />

    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:id="@+id/form_birds_count_units"
            android:hint="@string/monitoring_birds_count_unit"
            android:tag="Единица_на_броя"
            app:entries="form_birds_count_units"
            app:required="true" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:id="@+id/form_birds_count_type"
            android:hint="@string/monitoring_birds_count_type"
            android:tag="Тип_на_броя"
            app:entries="form_birds_count_type"
            app:required="true" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="@string/monitoring_birds_nesting"
            android:tag="Тип_Гнездене"
            app:entries="form_birds_nesting" />
    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="@string/monitoring_birds_count"
            android:tag="Брой" />

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="@string/monitoring_birds_min"
            android:tag="Мин." />

        <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
            android:hint="@string/monitoring_birds_max"
            android:tag="Макс." />

    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="@string/monitoring_birds_gender"
            android:tag="Пол"
            app:entries="form_birds_sex" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="@string/monitoring_birds_age"
            android:tag="Възраст"
            app:entries="form_birds_age" />

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:hint="@string/monitoring_birds_marking"
            android:tag="Маркировка"
            app:entries="form_birds_marking" />


    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:layout_span="2"
            android:hint="@string/monitoring_birds_status"
            android:tag="Статус_на_вида"
            app:entries="form_birds_status" />

        <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput_
            android:layout_span="2"
            android:hint="@string/monitoring_birds_behaviour"
            android:tag="Поведение"
            app:entries="form_birds_behaviour" />
    </TableRow>

    <TableRow>

        <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
            android:layout_span="2"
            android:hint="@string/monitoring_birds_death"
            android:tag="Мъртъв_индивид_причини"
            app:entries="form_birds_death" />
    </TableRow>
</TableLayout>