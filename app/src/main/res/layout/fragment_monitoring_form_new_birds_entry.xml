<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="beginning"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.NewBirdsEntryFormFragment">

    <TableRow>

        <Spinner
            style="@style/FieldInput.Spinner"
            android:layout_span="3"
            android:tag="Вид_научно_име"
            android:hint="Вид научно име"
            android:entries="@array/form_birds_name" />

        <CheckBox android:text="Поверително"
            android:tag="Поверително"
            />

    </TableRow>

    <TableRow>

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_count_units"
            android:tag="Единица_на_броя"
            android:hint="Единица на броя" />

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_count_type"
            android:tag="Тип_на_броя"
            android:hint="Тип на броя" />

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_nesting"
            android:tag="Тип_Гнездене"
            android:hint="Тип гнездене"
            />
    </TableRow>

    <TableRow>

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Брой"
            android:hint="Брой" />

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Мин."
            android:hint="Мин." />

        <EditText
            style="@style/FieldInput.Number"
            android:tag="Макс."
            android:hint="Макс." />

    </TableRow>

    <TableRow>

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_sex"
            android:tag="Пол"
            android:hint="Пол" />

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_age"
            android:tag="Възраст"
            android:hint="Възраст" />

        <Spinner
            style="@style/FieldInput.Spinner"
            android:entries="@array/form_birds_marking"
            android:tag="Маркировка"
            android:hint="Маркировка" />


    </TableRow>

    <TableRow>

        <Spinner
            style="@style/FieldInput.Spinner"
            android:layout_span="2"
            android:entries="@array/form_birds_status"
            android:tag="Статус_на_вида"
            android:hint="Статус на вида" />

        <EditText
            style="@style/FieldInput.MultipleChoice"
            android:layout_span="2"
            android:entries="@array/form_birds_behaviour"
            android:tag="Поведение"
            android:hint="Поведение" />
    </TableRow>

    <TableRow>

        <Spinner
            style="@style/FieldInput.Spinner"
            android:layout_span="2"
            android:entries="@array/form_birds_death"
            android:tag="Мъртъв_индивид_причини"
            android:hint="Мъртъв индивид (причини)" />
    </TableRow>
</TableLayout>