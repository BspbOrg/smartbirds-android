<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.MonitoringCommonFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Източник"
                    android:tag="Източник"
                    app:entries="form_main_source"
                    app:required="true" />

                <TextView
                    style="@style/FieldLabel"
                    android:text="Начало:" />

                <org.bspb.smartbirds.pro.ui.views.DateFormInput
                    android:hint="дата"
                    android:tag="Начална_Дата"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.TimeFormInput
                    android:hint="час"
                    android:tag="Час_начало"
                    app:required="true" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Място"
                    android:inputType="text|textCapWords|textPostalAddress"
                    android:tag="Място"
                    app:required="true" />

                <TextView
                    style="@style/FieldLabel"
                    android:text="Край:" />

                <org.bspb.smartbirds.pro.ui.views.DateFormInput
                    android:hint="дата"
                    android:tag="Крайна_Дата"
                    app:required="true" />

                <org.bspb.smartbirds.pro.ui.views.TimeFormInput
                    android:hint="час"
                    android:tag="Час_край"
                    app:required="true" />


            </TableRow>

        </TableLayout>

        <org.bspb.smartbirds.pro.ui.views.MultipleTextFormInput
            android:id="@+id/observers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Наблюдатели"
            android:inputType="text|textCapWords|textPersonName"
            android:tag="Наблюдатели"
            app:required="true" />

        <View style="@style/FieldSeparator" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:collapseColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Дъжд"
                    android:tag="Дъжд"
                    app:entries="form_main_rain" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="Темп °C"
                    android:tag="Температура_C" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Сила на вятъра"
                    android:tag="Сила_на_вятъра"
                    app:entries="form_main_wind_force" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Посока на вятъра"
                    android:tag="Посока_на_вятъра"
                    app:entries="form_main_wind_direction" />

            </TableRow>

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="Вид облаци"
                    android:tag="Вид_облаци" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput_
                    android:hint="Облачност %"
                    android:tag="Облачност_%"
                    app:entries="form_main_cloud_level" />

                <org.bspb.smartbirds.pro.ui.views.TextFormInput
                    android:hint="МТО други"
                    android:tag="МТО_други" />

                <org.bspb.smartbirds.pro.ui.views.FloatNumberFormInput
                    android:hint="Видимост км"
                    android:tag="Видимост_км" />

            </TableRow>
        </TableLayout>

        <View style="@style/FieldSeparator" />

        <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput_
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заплахи"
            android:tag="Заплахи"
            app:entries="form_main_threats" />

        <View style="@style/FieldSeparator" />

        <org.bspb.smartbirds.pro.ui.views.MemoFormInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Бележки"
            android:tag="Бележки" />
    </LinearLayout>
</ScrollView>