<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bspb.smartbirds.pro.ui.fragment.MonitoringCommonFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                    style="@style/FieldInput.SingleChoice"
                    android:entries="@array/form_main_source"
                    android:hint="Източник"
                    android:tag="Източник" />

                <TextView
                    style="@style/FieldLabel"
                    android:text="Начало:" />

                <EditText
                    style="@style/FieldInput.Date"
                    android:hint="дата"
                    android:tag="Начална_Дата" />

                <EditText
                    style="@style/FieldInput.Time"
                    android:hint="час"
                    android:tag="Час_начало" />

            </TableRow>

            <TableRow>

                <AutoCompleteTextView
                    style="@style/FieldInput.Text"
                    android:hint="Място"
                    android:inputType="text|textCapWords|textPostalAddress"
                    android:tag="Място" />

                <TextView
                    style="@style/FieldLabel"
                    android:text="Край:" />

                <EditText
                    style="@style/FieldInput.Date"
                    android:hint="дата"
                    android:tag="Крайна_Дата" />

                <EditText
                    style="@style/FieldInput.Time"
                    android:hint="час"
                    android:tag="Час_край" />


            </TableRow>

        </TableLayout>

        <MultiAutoCompleteTextView
            android:id="@+id/observers"
            style="@style/FieldInput.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textCapWords|textPersonName"
            android:hint="Наблюдатели"
            android:tag="Наблюдатели" />

        <View style="@style/FieldSeparator" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:collapseColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                    style="@style/FieldInput.SingleChoice"
                    android:entries="@array/form_main_rain"
                    android:tag="Дъжд"
                    android:hint="Дъжд" />

                <EditText
                    style="@style/FieldInput.Number"
                    android:hint="Темп °C"
                    android:tag="Температура_C" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                    style="@style/FieldInput.SingleChoice"
                    android:entries="@array/form_main_wind_force"
                    android:tag="Сила_на_вятъра"
                    android:hint="Сила на вятъра" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                    style="@style/FieldInput.SingleChoice"
                    android:entries="@array/form_main_wind_direction"
                    android:tag="Посока_на_вятъра"
                    android:hint="Посока на вятъра" />

            </TableRow>

            <TableRow>

                <EditText
                    style="@style/FieldInput.Text"
                    android:hint="Вид облаци"
                    android:tag="Вид_облаци" />

                <org.bspb.smartbirds.pro.ui.views.SingleChoiceFormInput
                    style="@style/FieldInput.SingleChoice"
                    android:entries="@array/form_main_cloud_level"
                    android:tag="Облачност_%"
                    android:hint="Облачност %" />

                <EditText
                    style="@style/FieldInput.Text"
                    android:hint="МТО други"
                    android:tag="МТО_други" />

                <EditText
                    style="@style/FieldInput.Number"
                    android:hint="Видимост км"
                    android:tag="Видимост_км" />

            </TableRow>
        </TableLayout>

        <View style="@style/FieldSeparator" />

        <org.bspb.smartbirds.pro.ui.views.MultipleChoiceFormInput
            style="@style/FieldInput.MultipleChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/form_main_threats"
            android:hint="Заплахи"
            android:tag="Заплахи" />

        <View style="@style/FieldSeparator" />

        <EditText
            style="@style/FieldInput.Memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Бележки"
            android:tag="Бележки" />
    </LinearLayout>
</ScrollView>